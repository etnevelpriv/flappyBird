<Window x:Class="flappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flappyBird"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/napos.png"/>
        </Canvas.Background>

        <Rectangle Height="75px" Width="100px" VerticalAlignment="Center">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/eger.png"/>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Height="300px" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100px" Canvas.Right="-100" Canvas.Bottom="0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/cica.png"/>
            </Rectangle.Fill>
        </Rectangle>

    </Canvas>
</Window>
